<p id="notice"><%= notice %></p>

<div class="offset-md-3 table">
  <h1>Pums</h1>
  <h2><%= @show_data %></h2>
  <button class="btn-green btn-general"><%= link_to "Boro Data", boros_path %></button>
  <button class="btn-green btn-general"><%= link_to "PUMA Data", dcp_pumas_path %></button>

  <div class="media">
    <div class="media-body"> 
      <table class="table table-hover display" id="table_id" data-turbolinks="false">
        <thead class="table-h2">
          <tr>
            <th>State puma</th>
            <th>Borough</th>
            <th>Age groupsd</th>
            <th>Age groups</th>
            <th>Age 65plus</th>
            <th>Age 18</th>
            <th>Mutu</th>
            <th>Mutud</th>
            <th>Education</th>
            <th>Education college</th>
            <th>English ability</th>
            <th>Lanx</th>
            <th>Nativity</th>
            <th>Poverty level</th>
            <th>Disability age groups</th>
            <th>Class worker</th>
            <th>Pumas</th>
            <th>Boros</th>
            <th>DCP Id</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pums.each do |pum| %>
            <tr>
              <td><%= pum.state_puma %></td>
              <td><%= pum.borough %></td>
              <td><%= pum.agegroupsd %></td>
              <td><%= pum.agegroups %></td>
              <td><%= pum.age65plus %></td>
              <td><%= pum.age18 %></td>
              <td><%= pum.mutu %></td>
              <td><%= pum.mutud %></td>
              <td><%= pum.educd_recode %></td>
              <td><%= pum.educd_college %></td>
              <td><%= pum.engability %></td>
              <td><%= pum.lanx %></td>
              <td><%= pum.nativity %></td>
              <td><%= pum.povertylevel %></td>
              <td><%= pum.disabilityagegroups %></td>
              <td><%= pum.classwkr_dcp %></td>
              <td><%= pum.dcp_puma_id %></td>
              <td><%= pum.boro_id %></td>
              <td><%= pum.id %></td>
              <td class="btn-green btn-general"><%= link_to 'Show', pum %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div> 
  </div>  
  <br>
  <h3>Import PUMs</h3>
    <%= form_tag import_pums_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Upload PUMs" %>
    <% end %>
</div>


<%= link_to 'New Pum', new_pum_path %>
