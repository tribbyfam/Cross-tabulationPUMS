<h5>Community District Data</h5>

  <%= render 'shared/nav_boro' %>

  <div id="content">
    <nav class="navbar navbar-expand-lg toggle-div">
      <div class="container-fluid col-md-2 offset-md-3">
        <button type="button" id="sidebarCollapse" class="btn btn-info toggle">
          <i class="fas fa-align-left"></i>
          <span>Toggle Bar</span>
        </button>
      </div>
    </nav>
  </div>

  <div>
    <div class="col-12 offset-3 table">
      <div>
        <table class="table table-hover">
          <thead class="tab-content" id="v-pills-tabContent">
            <tr>
              <th scope="col" class="table-h1">
                Community Districts
              </th>
              <th scope="col" class="table-h2">
                White Non-hispanic
              </th>
              <th scope="col" class="table-h2">
                Black Non-hispanic
              </th>
              <th scope="col" class="table-h2">
                Hispanic
              </th>
              <th scope="col" class="table-h2">
                Asian Non-hispanic
              </th>
              <th scope="col" class="table-h2">
                Other Non-hispanic
              </th>
              <th scope="col" class="table-h2">
                Two plus Non-hispanic
              </th>
            </tr>
          </thead>
        <thead>
        </div>
        <tbody>
          <tr>
            <% @pumas.each do |puma| %>

            <td> <%= puma.name %> </td>
            <td class="tbl">
            <%= puma.pums.where(mutu: '1').length
            %></td>
            <td class="tbl"><%= puma.pums.where(mutu: '2').length
            %></td>
            <td class="tbl"><%= puma.pums.where(mutu: '3').length
            %></td>
            <td class="tbl"><%= puma.pums.where(mutu: '4').length
            %></td>
            <td class="tbl"><%= puma.pums.where(mutu: '5').length
            %></td>
            <td class="tbl"><%= puma.pums.where(mutu: '6').length
            %></td>
          </tr>
            <td>Total: <%= puma.pums.count(:mutu) %></td>
          </tr>
           <% end %>
        </tbody>
       
      </div>
    </div>